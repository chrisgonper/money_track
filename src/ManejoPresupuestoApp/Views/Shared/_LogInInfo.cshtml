@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hola, @User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="LogOut" asp-controller="User">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Log out
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="SignUp" asp-controller="User">Crear cuenta</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="SignIn" asp-controller="User">Entrar</a>
        </li>
    }
</ul>
